<scroll-view scroll-y="true">
  <block wx:for="{{scatter}}"wx:for-index="idx"  wx:for-item="itemName" wx:key="i">
    <navigator url="../detail/detail?title=navigate" ><view class="item_title">
    <text >手机APP用户的第四次闪电借款</text><text style="margin-right:20px;">></text>
    </view></navigator>
