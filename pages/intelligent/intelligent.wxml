      <view class="log_item"><view >应收本息</view><view style="color: orange;">53.3</view></view>
      <view class="classname"><view class="classname">年化率</view><view class="classname">12.00%</view></view>
      
      <view class="classname"><view class="classname">借出本金</view><view class="classname">50.00</view></view>
      <checkbox value="value"/>
    </view>
    <view style="width: 100%;background: #eeeeee;height: 5px;"></view>
  </block>
</scroll-view>
<view class="group_button">
  <button size="mini" type="primary">确定投资</button>
  <button size="mini">取消投资</button>
</view>





